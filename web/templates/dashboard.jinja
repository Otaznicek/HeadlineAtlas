<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin=""/>
    <meta charset="UTF-8">
    <style>
        #map { height: 500px; }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div id="map"></div>
    

     <!-- Make sure you put this AFTER Leaflet's CSS -->
 <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
 integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
 crossorigin="">
</script>

<script> var map = L.map('map').setView([48.2806,37.1758], 6);

L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: 'Map data Â© <a href="https://www.openstreetmap.org/copyright">'
}).addTo(map);


     var latlng = L.latLng( {{long}} , {{lat}} );
     var popup = L.popup({
        closeOnClick: false  // Ensure the popup does not close when clicking on the map
     })
     .setLatLng(latlng)
     .setContent('<img src="https://i1.sndcdn.com/artworks-zyYqA8D0BdfuyH28-WeeHrw-t500x500.jpg" height="50px" width="50px">')
     .openOn(map);
     

</script>
</body>
</html>